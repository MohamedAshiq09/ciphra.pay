{
  "preset": "ts-jest/presets/default-esm",
  "testEnvironment": "node",
  "testMatch": ["<rootDir>/src/test/**/*.test.ts"],
  "transform": {
    "^.+\\.tsx?$": [
      "ts-jest",
      {
        "useESM": true
      }
    ]
  },
  "moduleNameMapper": {
    "^(\\.{1,2}/.*)\\.js$": "$1"
  },
  "extensionsToTreatAsEsm": [".ts"]
}
